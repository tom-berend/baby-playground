{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "module": "amd",
        "target": "ESNext",
        "lib":["es2022"],
        "moduleResolution": "node",
        "allowJs": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "esModuleInterop": true
    },
    "files": [
        "src/main.ts"
    ],
    "typeRoots": [
        "node_modules/@types"
    ],
    "include": [
        "src/**/*.ts",
        "planetcute/planetcute.d.ts", "src/views/studentLesson.ts.unused",
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ],
}